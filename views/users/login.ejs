<% layout('layouts/default.ejs') -%>

<form action="/login" method="post" class="needs-validation" novalidate>
<div class="container py-5">
    <div class="row justify-content-center align-items-center">
      <div class="col-lg-6 d-none d-lg-block">
        <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80" 
             class="img-fluid rounded-4 shadow" 
             alt="Login Visual">
      </div>
      <div class="col-lg-6">
        <div class="card shadow p-4 border-0 rounded-4">
          <h3 class="text-center mb-4 text-danger fw-bold">Welcome Back</h3>
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input name="username" type="text" class="form-control" id="username" placeholder="Enter your username" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input name="password" type="password" class="form-control" id="password" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="btn btn-danger w-100 rounded-pill fw-semibold">Log In</button>
          </form>
          <div class="text-center mt-3">
            <small>Don't have an account? <a href="/signup" class="text-danger text-decoration-none">Sign up here</a></small>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>